---
rules:
  indent:
    - 2
    - 2
    - {"SwitchCase": 1}
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - always
  space-before-function-paren:
    - 2
    - {named: never, anonymous: always}
  jsx-quotes:
    - 2
    - "prefer-double"
env:
  node: true
  browser: true
  mocha: true
  commonjs: true
extends: 'eslint:recommended'
globals:
  VERSION: true
